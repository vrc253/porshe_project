}

/*opci izgled nav trake,background boja,padding,itd...*/
ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	overflow: hidden;
	background-color: rgb(30, 31, 31);
}

/*pozicioniraj linkove u nav traci u lijevo*/
li {
